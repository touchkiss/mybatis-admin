            flushCache="true">
        update user set
          uid = <if test="record.uid != null">#{record.uid,jdbcType=INTEGER}</if><if test="record.uid == null">null</if>
          ,username = <if test="record.username != null">#{record.username,jdbcType=VARCHAR}</if><if test="record.username == null">null</if>
