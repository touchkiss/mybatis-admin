            flushCache="true"
            useGeneratedKeys="true"
            keyColumn="uid"
            keyProperty="uid">
        insert into user(uid
        ,username
        ,password)
        values(<if test="uid != null">#{uid
        ,jdbcType=INTEGER}</if><if test="uid == null">null</if>,<if test="username != null">#{username
        ,jdbcType=VARCHAR}</if><if test="username == null">null</if>,<if test="password != null">#{password
